extends layout

block content

  h1 Type: #{type.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each item in type_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This type has no items

  hr
  p
    a(href=type.url+'/delete') Delete type
  p
    a(href=type.url+'/update') Update type