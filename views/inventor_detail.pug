extends layout

block content

  h1 Inventor: #{inventor.name}
  p #{inventor.birth_formatted} - #{inventor.death_formatted}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each item in inventor_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This inventor has no items.
  hr
  p
    a(href=inventor.url+'/delete') Delete inventor
  p
    a(href=inventor.url+'/update') Update inventor