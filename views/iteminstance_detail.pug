extends layout

block content

  h1 ID: #{iteminstance._id}

  p #[strong Name: ]
    a(href=iteminstance.item.url) #{iteminstance.item.name}
  p #[strong Acquired:] #{iteminstance.days_since_acquired === 1 ? iteminstance.days_since_acquired + " day ago" : iteminstance.days_since_acquired + " days ago"}
  p #[strong Crafted:] #{iteminstance.crafted ? "Yes" : "No" }

  hr
  p
    a(href=iteminstance.url+'/delete') Delete item-instance
  p
    a(href=iteminstance.url+'/update') Update item-instance